{%- macro get_2xx_response_types(ns, endpoint) -%}
    {%- set response_types = [] -%}
    {%- set responses2xx = [] -%}
    {%- for response in endpoint.responses -%}
    {%- if 200 <= response.status_code < 300 -%}
        {%- set tmp = responses2xx.append(response) -%}
        {%- set tmp = response_types.append(response.prop.get_type_string()) -%}
    {%- endif -%}
    {%- endfor -%}

    {%- set ns.responses2xx = responses2xx -%}
    {%- set response_types_len = response_types|length -%}
    {%- if response_types|length == 1 -%}
        {% set ns.return_string = response_types[0] %}
    {%- else -%}
        {% set ns.return_string = "Union[" + response_types|join(", ") + "]" %}
    {%- endif -%}
{%- endmacro -%}
